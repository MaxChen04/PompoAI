# Create new Vite project with React
npm create vite@latest pompo-extension -- --template react

# Navigate to project directory
cd pompo-extension

# Install dependencies
npm install @headlessui/react @heroicons/react
npm install -D tailwindcss postcss autoprefixer
npm install @supabase/supabase-js
npm install @crxjs/vite-plugin
npm install @vitejs/plugin-react
npm install --save-dev @types/react @types/react-dom @types/node @types/chrome
npm install react react-dom @heroicons/react diff

# Install React type declarations
npm install --save-dev @types/react @types/react-dom

# Install other required type declarations
npm install --save-dev @types/chrome @types/node
npm install --save-dev @types/diff

# Initialize Tailwind CSS
npx tailwindcss init -p 

# Create the new directory structure
mkdir -p src/{assets,components/{common,popup,content},styles,services,utils,hooks,context,extension/{background,content,popup},config} 